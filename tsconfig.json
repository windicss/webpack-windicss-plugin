{
  "root": true,
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ES2019",
      "dom"
    ],
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "paths": {
      "windicss-webpack-plugin": ["./src/plugin.ts"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "example/**",
    "**/dist/**",
    "**/node_modules/**"
  ]
}
